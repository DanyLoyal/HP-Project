<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SmartQuote</title>

    <!-- Link til egen CSS-fil -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- (Valgfrit) Link til Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Andre meta-tags, scripts, favicons, osv. kan komme her -->
</head>
<body>
    <div class="container my-4">
        <header>
            <h1>SmartQuote</h1>
            <hr />
        </header>

        <!-- Her indsættes det konkrete view-indhold -->
        <main>
            @RenderBody()
        </main>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SmartQuote. All rights reserved.</p>
        </footer>
    </div>

    <!-- (Valgfrit) Scripts, fx Bootstrap JS, eget site.js, osv. -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
